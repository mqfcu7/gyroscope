<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.mqfcu7.caisong.gyroscope.SpliterLineView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorControlPad"
        android:paddingHorizontal="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/gyroscope_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@color/colorControlPad"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gyroscope_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:background="@color/colorControlPad"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/gyroscope_active"
                />

            <TextView
                android:id="@+id/gyroscope_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:textSize="10dp"
                android:textColor="@color/colorControlPadTextActive"
                android:background="@color/colorControlPad"
                android:gravity="center"
                android:text="转 盘"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/history_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@color/colorControlPad"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/history_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:background="@color/colorControlPad"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/history"
                />

            <TextView
                android:id="@+id/history_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:textSize="10dp"
                android:textColor="@color/colorControlPadText"
                android:background="@color/colorControlPad"
                android:gravity="center"
                android:text="历 史"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorControlPad"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/setting_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:background="@color/colorControlPad"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/setting"
                />

            <TextView
                android:id="@+id/setting_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:textSize="10dp"
                android:textColor="@color/colorControlPadText"
                android:background="@color/colorControlPad"
                android:gravity="center"
                android:text="设 置"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/game_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorControlPad"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/game_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:background="@color/colorControlPad"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/game"
                />

            <TextView
                android:id="@+id/game_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:textSize="10dp"
                android:textColor="@color/colorControlPadText"
                android:background="@color/colorControlPad"
                android:gravity="center"
                android:text="手 气"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

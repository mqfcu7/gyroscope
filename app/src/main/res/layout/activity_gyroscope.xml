<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mqfcu7.caisong.gyroscope.GyroscopeSurfaceView
        android:id="@+id/gyroscope_surface_view"
        android:layout_alignBottom="@id/control_pad_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:paddingHorizontal="40dp"
        android:layout_marginBottom="150dp"
        />

    <fragment
        android:id="@+id/control_pad_container"
        android:name="com.mqfcu7.caisong.gyroscope.ControlPadFragment"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </fragment>

</RelativeLayout>